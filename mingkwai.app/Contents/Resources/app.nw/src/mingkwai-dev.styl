
/* ------------------------------------------------------------------------------------------------------ */
@require mingkwai-colors
@require mingkwai-layout

xbig
  font-size:              200%

.hilite
  color:                  $red


/* ------------------------------------------------------------------------------------------------------ */
@media screen


  /* -----------------------------------------------------------------------------------------------------*/
  // @media screen
  .paper
    outline:                1px dotted red

  /* -----------------------------------------------------------------------------------------------------*/
  .page
    outline:                1px dotted blue
    box-shadow              0px 0px 35px 10px rgba( 0, 0, 0, 0.5 )

  /* -----------------------------------------------------------------------------------------------------*/
  .mingkwai-dev-page-marker
    position:               absolute
    top:                    $margin-top  + $gutter-top
    left:                   $margin-left + $gutter-left
    width:                  $content-width
    height:                 $content-height
    outline:                1px dotted green
    z-index:                1
    /* Allow click-through;
      thx to http://stackoverflow.com/a/4839672/256361 */
    pointer-events:         none
    box-shadow:             inset 0px 0px 35px -10px rgba( 0, 0, 0, 0.5 )

  /* -----------------------------------------------------------------------------------------------------*/
  body
  .paper
  .mingkwai-dev-page-marker
  .page
    background-color:       rgba( 0, 0, 0, 0.01 )


  /* -----------------------------------------------------------------------------------------------------*/
  .flex-columns-wrap
    outline:                1px dotted violet


  /* ------------------------------------------------------------------------------------------------------
   COLUMNS */

  .focus
    // outline:                1px solid rgba( 200, 0, 0, 0.5 )
    // background-color:       rgba( 200, 0, 0, 0.25 )
    background:             none
    /* Allow click-through;
      thx to http://stackoverflow.com/a/4839672/256361 */
    pointer-events:         none
    width:                  10px
    height:                 10px
    z-index:                1

  .column
    background-color:       #dee1dd

  .cork
    display:                inline-block
    width:                  0
    height:                 1em
    outline:                1px solid red

  /* ------------------------------------------------------------------------------------------------------
   KW */

  #box-a
    outline:                1px solid red

  #box-b
    outline:                1px solid green

  #box-c
    outline:                1px solid blue


