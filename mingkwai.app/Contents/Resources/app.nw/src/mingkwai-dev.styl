  /* ------------------------------------------------------------------------------------------------------
   UI */

  html, body
    height:                 100%

  html
    background-image:       url( ./background_linen.png ) !important
    background-color:       gray !important

  body
    background-color:       transparent

  outer
    height:                 100%
    width:                  100%
    display:                flex
    flex-direction:         column
    justify-content:        center
    align-items:            stretch
    // align-content:          stretch

  // ### TAINT must distinguish vertical, horizontal panels ###
  panel
    // width:                  100%
    // height:                 100%
    top:                    0
    left:                   0
    overflow:               hidden
    outline:                1px solid black
    align-self:             strech

  panel.top
  panel.bottom
    flex-grow:              0
    flex-shrink:            0
    height:                 150px

  panel.center
    overflow:               scroll
    flex-basis:             main-size
    flex-grow:              1
    flex-shrink:            1

  grip
    flex-grow:              0
    flex-shrink:            0

  grip.horizontal
    align-self:             stretch
    height:                 10px
    background-color:       $gray

  boxer
    width:                  100%
    height:                 100%
    position:               fixed
    top:                    0
    left:                   0
    padding:                1mm
    z-index:                1000
    pointer-events:         none


  ribbon
  ribbon.bar
    pointer-events:         auto
    border:                 1px solid black
    background-color:       $gray
    position:               fixed
    display:                flex
    width:                  100%
    padding:                0.5mm

  ribbon.float
    draggable:              true // not CSS3
    resize:                 both
    overflow:               hidden

  ribbon.float.vertical
    width:                  10mm
    height:                 10%
    flex-direction:         column

  ribbon.float.horizontal
    width:                  100%
    height:                 10%
    flex-direction:         row

  ribbon.left
    left:                   1mm

  ribbon.right
    right:                  1mm

  ribbon.top
    top:                    10mm

  ribbon.bottom
    bottom:                 10mm

  ribbon.dock
  ribbon.tile

  tool
    pointer-events:         auto
    // margin:                 0.5mm

  tool.console
    width:                  100%
    height:                 100%
    background-color:       $console-black
    color:                  white
    overflow:               auto

  tool.console div
    font-family:            "Flow DejaVu Sans Mono", 'Courier', monospace
    font-size:              2.5mm
    line-height:            3mm

