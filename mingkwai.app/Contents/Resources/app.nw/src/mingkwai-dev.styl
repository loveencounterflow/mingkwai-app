/* ====================================================================================================== */
@media print

  @page
    width:                  210mm
    height:                 297mm
    margin:                 0
    // /* you can also specify margins here: */
    // margin: 25mm;
    // margin-right: 45mm; /* for compatibility with both A4 and Letter */

  paper
    page-break-inside:      avoid
    page-break-before:      always
  //   page-break-after:       always

