@font-face
  font-family:            'cjk'
  src:                    url( './fonts/LastResort.ttf' )
  unicode-range: \
    U+02e80-02eff,        // CJK Radicals Supplement                 u-cjk-rad2
    U+02f00-02fdf,        // Kangxi Radicals                         u-cjk-rad1
    U+03000-0303f,        // CJK Symbols and Punctuation             u-cjk-sym
    U+031c0-031ef,        // CJK Strokes                             u-cjk-strk
    U+03200-032ff,        // Enclosed CJK Letters and Months         u-cjk-enclett
    U+03300-033ff,        // CJK Compatibility                       u-cjk-cmp
    U+03400-04dbf,        // CJK Unified Ideographs Extension A      u-cjk-xa
    U+04e00-09fff,        // CJK Unified Ideographs                  u-cjk
    U+0f900-0faff,        // CJK Compatibility Ideographs            u-cjk-cmpi1
    U+0fe30-0fe4f,        // CJK Compatibility Forms                 u-cjk-cmpf
    U+20000-2a6df,        // CJK Unified Ideographs Extension B      u-cjk-xb
    U+2a700-2b73f,        // CJK Unified Ideographs Extension C      u-cjk-xc
    U+2b740-2b81f,        // CJK Unified Ideographs Extension D      u-cjk-xd
    U+2f800-2fa1f         // CJK Compatibility Ideographs Supplement u-cjk-cmpi2


